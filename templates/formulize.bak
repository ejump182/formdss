
<{$formulize.javascript}>
<form name="<{$formulize.name}>" action="<{$formulize.action}>" method="<{$formulize.method}>" <{$formulize.extra}>>
<{if $formallowsviews}>
<{if $theycanadd}>
<center>
	<table>
	<tr>
	<td width=25%>&nbsp;</td>
	<td>
		<table cellpadding=3 cellspacing=1 border=1>
		<tr>
		<th valign=middle>
			<center><h3><nobr><b><{$tempaddingentry}></b></nobr></h3></center>
		</th>
		<td class=head valign=middle>
			<center><h3><nobr><a href="<{$tempformurl}>&select=1"><{$tempviewentries}></a></nobr></h3></center>
		</td>
		</tr>
		</table>
	</td>
	<td width=25%>&nbsp;</td>
	</tr>
	</table>
</center>
	<hr>
<{/if}>
<{/if}>
	<table cellspacing="1" class="outer"  width=98%>
		<tr><th colspan="2"><{$formulize.title}></th></tr>
		<{foreach item=element from=$formulize.elements}>
		<{if $element.hidden != true}>
		<tr>
			<td class="head"><{$element.caption}></td>
			<td class="even"><{$element.body}></td>
		</tr>
		<{/if}>
		<{/foreach}>
	</table>
	<{foreach item=element from=$formulize.elements}>
	<{if $element.hidden == true}>
		<{$element.body}>
	<{/if}>
	<{/foreach}>
</form>

<hr>

<{if $xoops_notification.show}>
<form name="notification_select" action="<{$xoops_notification.target_page}>" method="post">
<h4 style="text-align:center;"><{$lang_activenotifications}></h4>
<input type="hidden" name="not_redirect" value="<{$xoops_notification.redirect_script}>?title=<{$title}>" />
<table class="outer">
  <tr><th colspan="3"><{$lang_notificationoptions}></th></tr>
  <tr>
    <td class="head"><{$lang_category}></td>
    <td class="head"><input name="allbox" id="allbox" onclick="xoopsCheckAll('notification_select','allbox');" type="checkbox" value="<{$lang_checkall}>" /></td>
    <td class="head"><{$lang_events}></td>
  </tr>
  <{foreach name=outer item=category from=$xoops_notification.categories}>
  <{foreach name=inner item=event from=$category.events}>
  <tr>
    <{if $smarty.foreach.inner.first}>
    <td class="even" rowspan="<{$smarty.foreach.inner.total}>"><{$category.title}></td>
    <{/if}>
    <td class="odd">
    <{counter assign=index}>
    <input type="hidden" name="not_list[<{$index}>][params]" value="<{$category.name}>,<{$id_form}>,<{$event.name}>" />
	[<{$subNew}>][<{$subUp}>][<{$subDel}>][Event.Name=<{$event.name}>]
    <input type="checkbox" id="not_list[]" name="not_list[<{$index}>][status]" value="1" <{if ($event.name == "new_entry" AND $subNew) OR ($event.name == "update_entry" AND $subUp) OR ($event.name == "delete_entry" AND $subDel)}>checked="checked"<{/if}> />
    </td>
    <td class="odd"><{$event.caption}></td>
  </tr>
  <{/foreach}>
  <{/foreach}>
  <tr>
    <td class="foot" colspan="3" align="center"><input type="submit" name="not_submit" value="<{$lang_updatenow}>" /></td>
  </tr>
</table>
<div align="center">
<{$lang_notificationmethodis}>:&nbsp;<{$user_method}>&nbsp;&nbsp;[<a href="<{$editprofile_url}>"><{$lang_change}></a>]
</div>
</form>
<{/if}>